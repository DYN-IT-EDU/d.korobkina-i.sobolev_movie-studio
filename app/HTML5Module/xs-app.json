{
    "welcomeFile": "/index.html",
    "authenticationMethod": "route",
    "logout": {
    "logoutEndpoint": "/app-logout",
    "logoutPage": "/"
},
    "routes": [
      {
        "source": "/user-api/currentUser$",
        "target": "/currentUser",
        "service": "sap-approuter-userapi"
      },
      {
        "source": "^/equipment/(.*)$",
        "target": "/equipment/$1",
        "destination": "movie-studio-app-srv",
        "authenticationType": "xsuaa",        
        "csrfProtection": true
      },
      {
        "source": "^/contracts/(.*)$",
        "target": "/contracts/$1",
        "destination": "movie-studio-app-srv",
        "authenticationType": "xsuaa",
        "csrfProtection": true
      },
      {
        "source": "^/movies/(.*)$",
        "target": "/movies/$1",
        "destination": "movie-studio-app-srv",
        "authenticationType": "xsuaa",
        "csrfProtection": true
      },
      {
        "source": "^/scenes/(.*)$",
        "target": "/scenes/$1",
        "destination": "movie-studio-app-srv",
        "authenticationType": "xsuaa",
        "csrfProtection": true
      },                 
      {
        "source": "^(.*)$",
        "target": "$1",
        "service": "html5-apps-repo-rt",
        "authenticationType": "xsuaa"
      }
    ]
  }